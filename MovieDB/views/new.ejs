<% include partial/header %>
<div class="container">
    <h1 style="text-align: center">Create a New Movie Record</h1>
    <form action="/movies" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" autocomplete="off" required />
        </div>
        <div class="form-group">
            <label for="image">URL</label>
            <input class="form-control" type="text" name="image" placeholder="image url" autocomplete="off" required/>
        </div>
        <div class="form-group">
            <label for="genre">Movie Genres</label>
            <input class="form-control" type="text" name="genre" autocomplete="off" placeholder="Ex: Comedy, Crime, Action, Romance, Drama, Horror..." required></input>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input class="form-control" type="text" name="description" autocomplete="off" required></input>

        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        <hr>
        <a href="/movies">Back</a>
    </form>
</div>
<% include partial/footer %>
