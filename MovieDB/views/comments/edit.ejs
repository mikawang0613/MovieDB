<% include ../partial/header.ejs %>
<div class="container">
    <h1 style="text-align:center">
        Edit Comment
    </h1>
    <div style ="width:50%; margin:25px auto;">
        <form action="/movie/<%= movie_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">
                    Submit!
                </button>
            </div>
            <hr>
            <a href="/movie/<%= movie_id %>">Back</a>
        </form>
    </div>
</div>
