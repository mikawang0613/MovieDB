<% include partial/header %>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" 
	integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" 
	crossorigin="anonymous"></script>
	<script src = "/javascripts/publicGrounds.js"></script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

	<link rel="stylesheet" href="../public/stylesheet/style.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				 <h3>
				Recommendation Movie based on your favorite genre type <%= type %>
				</h3>
				<p>
					
                </p>
                
                <div class="row text-center" style="display:flex; flex-wrap:wrap;">
                    <% recommendations.forEach(function(r){ %>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                                 <img src= "https://image.tmdb.org/t/p/w200/<%= r.poster_path%>">
        
                                <div class="caption">
                                <h4>
                                       <%= r.title %>
                                </h4>
                                </div>
                        <p>
                        <a onClick="movieSelected('<%= r.id %>')" href="/movie" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                 </div>
        
                  <% }); %>
                    </div>
				
			</div>
		</header>
	   
    </div>
    <a href = "movies/now_playing"></button>

	
 

<% include partial/footer %>
