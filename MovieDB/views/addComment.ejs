<% include partial/header %>
<div class="container">
	<h1 style="text-align:center">
	Add New Comment to <%=movie.name%>
	</h1>
	<div style ="width:50%; margin:25px auto;">
		<form action="/movie/<%=movie._id%>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder = "text" autocomplete="off" required />
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Submit!
				</button>
			</div>
			<hr>
			<a href="/movie/<%=movie._id%>">Back</a>
		</form>
	</div>
</div>
<% include partial/footer %>
