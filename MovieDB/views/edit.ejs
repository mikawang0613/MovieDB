<% include partial/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= movie.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/movie/<%= movie._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[name]" value="<%= movie.name %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="movie[price]" value="<%= movie.price %>"  min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[image]" value="<%= movie.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[description]" value="<%= movie.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>

<% include partial/footer %>