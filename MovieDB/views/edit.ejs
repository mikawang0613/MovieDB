<% include partial/header %>
<div class="container">
    <h1 style="text-align: center">Edit <%= movie.name %></h1>
        <form action="/movie/<%= movie._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="movie[name]">Name</label>
                <input class="form-control" type="text" name="movie[name]" value="<%= movie.name %>">
            </div>
            <div class="form-group">
                <label for="movie[image]">URL</label>
                <input class="form-control" type="text" name="movie[image]" value="<%= movie.image %>">
            </div>
            <div class="form-group">
                <label for="movie[genere]">Movie Genere</label>
                <input class="form-control" type="text" name="movie[genere]" value="<%= movie.genere %>">
            </div>

            <div class="form-group">
                <label for="movie[description]">Description</label>
                <input class="form-control" type="text" name="movie[description]" value="<%= movie.description %>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <hr>
            <a href="/movies">Go Back</a>
        </form>

</div>

<% include partial/footer %>
